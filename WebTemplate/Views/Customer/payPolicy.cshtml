@model WebTemplate.Models.PaymentDetail
@{
    ViewBag.Title = "payPolicy";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}
@if (@Session["Success"] != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@Session["Success"]");
            };
    </script>
    Session.Remove("Success");

}
<script type="text/javascript">
    function DisableBackButton() {
        window.history.forward();
    }
    setTimeout("DisableBackButton()", 0);
    window.onunload = function () {
        null
    };
</script>
<style>


    .card0 {
        box-shadow: 0px 4px 8px 0px #757575;
        border-radius: 0px
    }

    .card2 {
        margin: 0px 40px
    }

    .logo {
        width: 200px;
        height: 100px;
        margin-top: 20px;
        margin-left: 35px
    }

    .image {
        width: 360px;
        height: 280px
    }

    .border-line {
        border-right: 1px solid #EEEEEE
    }

    .facebook {
        background-color: #3b5998;
        color: #fff;
        font-size: 18px;
        padding-top: 5px;
        border-radius: 50%;
        width: 35px;
        height: 35px;
        cursor: pointer
    }

    .twitter {
        background-color: #1DA1F2;
        color: #fff;
        font-size: 18px;
        padding-top: 5px;
        border-radius: 50%;
        width: 35px;
        height: 35px;
        cursor: pointer
    }

    .linkedin {
        background-color: #2867B2;
        color: #fff;
        font-size: 18px;
        padding-top: 5px;
        border-radius: 50%;
        width: 35px;
        height: 35px;
        cursor: pointer
    }

    .line {
        height: 1px;
        width: 40%;
        background-color: #E0E0E0;
        margin-top: 10px
    }

    .or {
        width: 10%;
        font-weight: bold
    }

    .text-sm {
        font-size: 14px !important
    }



    input,
    textarea {
        padding: 10px 12px 10px 12px;
        border: 1px solid lightgrey;
        border-radius: 2px;
        margin-bottom: 5px;
        margin-top: 2px;
        width: 100%;
        box-sizing: border-box;
        color: #2C3E50;
        font-size: 14px;
        letter-spacing: 1px
    }

        input:focus,
        textarea:focus {
            -moz-box-shadow: none !important;
            -webkit-box-shadow: none !important;
            box-shadow: none !important;
            border: 1px solid #304FFE;
            outline-width: 0
        }

    button:focus {
        -moz-box-shadow: none !important;
        -webkit-box-shadow: none !important;
        box-shadow: none !important;
        outline-width: 0
    }

    a {
        color: inherit;
        cursor: pointer
    }

    .btn-blue {
        background-color: #1A237E;
        width: 150px;
        color: #fff;
        border-radius: 2px
    }

        .btn-blue:hover {
            background-color: #000;
            cursor: pointer
        }

    .bg-blue {
        color: #fff;
        background-color: #1A237E
    }
</style>
@if (ViewBag.Message != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>

}
<div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
    <div class="card card0 border-0">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row d-flex">


                <div class="col-lg-6">
                    <div class="card1 pb-5">
                        <div class="row px-3 justify-content-center mt-4 mb-5 border-line"> <img src="https://i.imgur.com/uNGdWHi.png" class="image"> </div>
                    </div>
                </div>



                <div class="col-lg-6">
                    <div class="card2 card border-0 px-4 py-5">


                        <div class="row px-3 mb-4">
                            <div class="line"></div> <h3 class="text-center"><strong>Payment Details</strong></h3>
                            <div class="line"></div>
                        </div>
                        <div class="row px-3">
                            <label class="mb-1">
                                <h6 class="mb-0 text-sm">
                                    Card Number
                                    @Html.ValidationMessageFor(item => item.carNumber, "", new { @class = "text-danger" })

                                </h6>
                            </label> @Html.TextBoxFor(item => item.carNumber, new { @type = "tel", @pattern = "[0-9]{16}", @required = "required", @placeholder = "Enter Your Card Number-16 digits", @class = "mb-4" } )
                        </div>
                        <div class="row px-3">
                            <label class="mb-1">
                                <h6 class="mb-0 text-sm">
                                    Expiry Date
                                    @Html.ValidationMessageFor(item => item.expiryMonth, "", new { @class = "text-danger" })

                                </h6>
                            </label> @Html.TextBoxFor(item => item.expiryMonth, new { @required = "required", @pattern = "[0-9]{2}", @type = "tel", @placeholder = "Enter Month", @class = "mb-4" } )
                            @Html.TextBoxFor(item => item.expiryYear, new { @type = "tel", @required = "required", @pattern = "[0-9]{4}", @placeholder = "Enter Year", @class = "mb-4" } )
                        </div>
                        <div class="row px-3">
                            <label class="mb-1">
                                <h6 class="mb-0 text-sm">
                                    Security Code
                                    @Html.ValidationMessageFor(item => item.securityCode, "", new { @class = "text-danger" })

                                </h6>
                            </label> @Html.TextBoxFor(item => item.securityCode, new { @type = "tel", @pattern = "[0-9]{3}", @required = "required", @placeholder = "Enter Your CVV", @class = "mb-4" } )
                        </div>


                        <div class="row px-6 mb-4">
                        </div>
                        <div class="row mb-4 px-3">
                            <input type="submit" value="Submit" class="btn btn-blue text-center" />

                        </div>

                    </div>

                </div>

            </div>
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#table').DataTable({
            "paging": true,
            "ordering": true,
            "info": true,
            "order": [[5, "desc"]],
            @*"scrollY": '30vh',
            "scrollCollapse": true,*@
            "pagingType": "full",
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
        });
    });
</script>
